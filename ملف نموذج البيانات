struct User {
    let id: String
    let email: String
    let phone: String
    let firstName: String
    let lastName: String
    let userType: UserType
    let stadiumLocation: String?
    let sportsOffered: [SportType]?
    
    init(
        id: String,
        email: String,
        phone: String,
        firstName: String,
        lastName: String,
        userType: UserType,
        stadiumLocation: String? = nil,
        sportsOffered: [SportType]? = nil
    ) {
        self.id = id
        self.email = email
        self.phone = phone
        self.firstName = firstName
        self.lastName = lastName
        self.userType = userType
        self.stadiumLocation = stadiumLocation
        self.sportsOffered = sportsOffered
    }
}
